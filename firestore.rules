rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Users: Allow read/write for the user themselves
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Bars: Allow read/write for authenticated users
    // In a real app, you might restrict write to Owners or specific roles
    match /bars/{barId} {
      allow read, write: if isAuthenticated();

      // Users subcollection: Allow read/write for authenticated users
      match /users/{userId} {
        // Allow write only if user is modifying their own document
        allow write: if isAuthenticated() && request.auth.uid == userId;
        // Allow read if user is reading their own document OR the user is active/pending
        allow read: if isAuthenticated() && (request.auth.uid == userId || resource.data.status in ['active', 'pending']);
      }

      // Tokens subcollection: Allow read/write for authenticated users
      match /tokens/{userId} {
        allow read, write: if isAuthenticated();
      }

      // Notices subcollection: Allow read/write for authenticated users
      match /notices/{noticeId} {
        allow read, write: if isAuthenticated();
      }
    }

    // Requests: Allow read/write for authenticated users
    match /requests/{requestId} {
      allow read, write: if isAuthenticated();
    }
  }
}
